<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/common_bg</item>

        <!-- Customize SplashScreen here. -->
        <item name="android:windowSplashScreenBackground">@color/colorAccent</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_login_checkbox</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/error</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_launcher_foreground</item>

        <!-- 필요시 다크모드 같은 상황 고려. Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>